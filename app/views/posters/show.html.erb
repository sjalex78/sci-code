<style>

.poster {
  <%=@poster.css%>
}
</style>

<div class="poster">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @poster %>

    <%= link_to 'Edit this poster', edit_poster_path(@poster), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this poster', poster_path(@poster), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= link_to "PDF", poster_path(@poster, format: :pdf) %>
    </div>
    <%= link_to 'Back to posters', posters_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
