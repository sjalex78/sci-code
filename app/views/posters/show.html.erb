<style>

.poster {
  <%=@poster.css%>
}
</style>

<div class="poster">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @poster %>

    <div class="inline-block ml-2">
      <%= link_to 'Edit', edit_poster_path(@poster), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer" %>
    </div>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', poster_path(@poster), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer" %>
    </div>
    <div class="inline-block ml-2">
      <%= link_to "View PDF", poster_path(@poster, format: :pdf), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer" %>
    </div>
    <div class="inline-block ml-2">
      <%= link_to "Home", root_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer" %>
    </div>
  </div>
</div>
