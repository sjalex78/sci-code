<div id="<%= dom_id poster %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= poster.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Author:</strong>
    <%= poster.author %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this poster", poster, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this poster', edit_poster_path(poster), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
