<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Sci-Poster</title>
      <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
          <div class="flex space-x-7">
            <!--Logo-->
            <a href="#" class="flex items-center py-4 px-2">
            <%= image_tag("logo",alt: "Loaf & Lily Logo", class: "h-8 w-8 mr-2")%>
              <span class="font-semibold text-gray-500 text-lg">
                Sci-Poster-Creator
              </span>
            </a>
          </div>
          <div class="hidden md:flex items-center space-x-1">
            <%=link_to "Home", root_path, class: "py-4 px-2 text-gray-500 border-b-4 border-purple-500 font-semibold" %>
            <% if user_signed_in? %>
            <%= link_to "My posters", root_path, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-500 transition duration-300"%>
            <%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-500 transition duration-300"%>
            <%else%>
            <%= link_to "Login", new_user_registration_path, class: "py-4 px-2 text-gray-500 font-semibold hover:text-purple-500 transition duration-300"%>
            <%end>%>
          </div>
          <div class="md:hidden flex items-center">
            <button class="outline-none menu-button">
              <svg class="w-6 h-6 text-gray-500" x-show="! showMenu" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 00 24 24" stroke="currentColor"><path d="m4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
          <div class="hidden mobile-menu">
            <ul class="">
              <li>
                <%= link_to "Home", root_path, class:"block.text-sm.px-2.py-4 hover:bg-purple-500 transition duration-300"%>
              </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to "My Posters", root_path, class:"block.text-sm.px-2.py-4 hover:bg-purple-500 transition duration-300"%>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class:"block.text-sm.px-2.py-4 hover:bg-purple-500 transition duration-300"%>
              </li>
            <% else %>
              <li>
                <%= link_to "Login", new_user_registration_path, class:"block.text-sm.px-2.py-4 hover:bg-purple-500 transition duration-300"%>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
    <script>
        const btn = document.querySelector('button.menu-button');
        const menu = document.querySelector(".mobile-menu");
        btn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
        })
    </script>
  </body>
</html>
